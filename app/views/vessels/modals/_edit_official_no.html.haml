.modal.fade{id: "edit-official-no", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-md
    .modal-content
      = simple_form_for OfficialNo.new(content: @vessel.reg_no),
                        url:  vessel_official_no_path(@vessel),
                        remote: true,
                        method: :put do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Edit Official Number (Team Leader only)
        .modal-body
          = f.input :content,
                    label: "New Official Number",
                    input_html: { class: "upcase" }

        .modal-footer
          = button_to "Cancel", "#", class: "btn btn-danger", "data-dismiss" => "modal"
          = f.submit "Save", class: "btn btn-success submit_edit_official_no"

