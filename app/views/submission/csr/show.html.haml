= render partial: "submission/tasks/base", locals: {submission: @submission, task: @task}

- content_for :task_body
  .row
    .col-md-12
      .x_panel
        .x_title
          Application Details
        .clearfix
        .x_content
          %div{"data-example-id" => "togglable-tabs", :role => "tabpanel"}
            %ul.nav.nav-tabs.bar_tabs{:role => "tablist"}

              %li{:role => "presentation", class: "active"}
                %a#csr-tab{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#csr_tab", :role => "tab"}
                  CSR Information

            #csr_tab.tab-pane{class: "active", "aria-labelledby" => "csr-tab", :role => "tabpanel"}
              #csr_form= render partial: "submission/csr/form", locals: {submission: @submission}

  = render partial: "submissions/extended/actions/save"

