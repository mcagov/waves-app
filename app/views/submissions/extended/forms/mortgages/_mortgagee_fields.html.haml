.nested-fields
  .row
    .col-md-8.form-group
      = label_tag :common_mortgagees, "Commonly-used Mortgagees"

      = select_tag :common_mortgagees,
        options_for_select(CommonMortgagee.all.collect{ |u| [u.name, u.formatted_id] }),
        include_blank: true,
        class: "form-control populate-mortgagee"
  .row
    .col-md-4
      = mortgagee_f.input :name, input_html: { class: "upcase name" }, label: "Name of Mortgagee"
    .col-md-8
      .pull-right
        = link_to_remove_association mortgagee_f,
          class: "btn btn-link",
          style: "color: red; padding-top: 25px !important;" do
          %i.fa.fa-trash
          Remove
  .row
    .col-md-4
      = mortgagee_f.input :address_1, input_html: { class: "upcase address-1" }
    .col-md-4
      = mortgagee_f.input :address_2, input_html: { class: "upcase address-2" }
    .col-md-4
      = mortgagee_f.input :address_3, input_html: { class: "upcase address-3" }
  .row
    .col-md-4
      = mortgagee_f.input :town, label: "Town or City", input_html: { class: "upcase town" }
    .col-md-4
      = mortgagee_f.input :postcode, input_html: { class: "upcase postcode" }
    .col-md-4
      = mortgagee_f.input :country, collection: countries_collection, include_blank: false, input_html: { class: "country" }
  %hr
