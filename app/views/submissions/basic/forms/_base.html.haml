= simple_form_for @submission, class: "form-vertical" do |f|
  .row
    .col-md-12
      .x_panel
        .x_title
          %h2 Edit Application
          .clearfix
        .x_content
          %div{"data-example-id" => "togglable-tabs", :role => "tabpanel"}
            %ul#myTab.nav.nav-tabs.bar_tabs{:role => "tablist"}

              %li{:role => "presentation", class: "active"}
                %a#vessel-tab{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#vessel_tab", :role => "tab"} Vessel Details

              %li{:role => "presentation"}
                %a#owner-tab{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#owners_tab", :role => "tab"} Owners

              %li{:role => "presentation"}
                %a#agent-tab{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#agent_tab", :role => "tab"} Agent

            #myTabContent.tab-content

              #vessel_tab.tab-pane{class: "active", "aria-labelledby" => "vessel-tab", :role => "tabpanel"}
                = render partial: "submissions/basic/forms/vessel_fields",
                  locals: { submission_f: f, disabled: !@submission.vessel_can_be_edited? }

              #owners_tab.tab-pane{"aria-labelledby" => "owner-tab", :role => "tabpanel"}
                #owners_list= render partial: "submissions/basic/forms/owners/list"

              #agent_tab.tab-pane{"aria-labelledby" => "vessel-tab", :role => "tabpanel"}
                = render partial: "submissions/basic/forms/agent/list"

  .row.no-print
    .col-sm-12
      = button_tag(type: 'submit', class: "btn btn-primary btn-lg pull-right") do
        %i.fa.fa-check
        Save Application

#owners_modals
  = render partial: "/submissions/basic/forms/owners/modals"
#agent_modal
  = render partial: "/submissions/basic/forms/agent/modal"
